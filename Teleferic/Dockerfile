FROM python:3.5.2

MAINTAINER DXMarkets

RUN mkdir /code

WORKDIR /code
ADD requirements.txt /code/
RUN pip install -r requirements.txt

ADD API /code/API
ADD Teleferic /code/Teleferic
ADD gunicorn_conf.py /code/
ADD manage.py /code/
ADD settings.py /code/
ADD run.sh /code/

EXPOSE 8000

ENV PRODUCTION 1

CMD ./run.sh